{
    "name": "aerosense-desktop",
    "productName": "AeroSense",
    "version": "1.0.0",
    "description": "Cross-platform air quality monitoring and analytics application",
    "main": "electron-main.js",
    "scripts": {
        "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
        "electron:build": "npm run build && electron-builder",
        "electron:build:win": "npm run build && electron-builder --win",
        "electron:build:mac": "npm run build && electron-builder --mac",
        "electron:build:linux": "npm run build && electron-builder --linux"
    },
    "build": {
        "appId": "com.aerosense.app",
        "productName": "AeroSense",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "electron-main.js",
            "preload.js",
            "server/**/*",
            "!server/__pycache__",
            "!server/*.pyc"
        ],
        "extraResources": [
            {
                "from": "server",
                "to": "server",
                "filter": [
                    "**/*",
                    "!__pycache__",
                    "!*.pyc"
                ]
            }
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                },
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "client/public/icon.png"
        },
        "mac": {
            "target": [
                "dmg",
                "zip"
            ],
            "category": "public.app-category.utilities",
            "icon": "client/public/icon.png"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb",
                "rpm"
            ],
            "category": "Utility",
            "icon": "client/public/icon.png"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        }
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "electron": "^28.1.0",
        "electron-builder": "^24.9.1",
        "wait-on": "^7.2.0"
    }
}